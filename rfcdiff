opthtml=1; optdiff=0; optchbars=1; optwdiff=1; optshow=1; optnowdiff=1;
optkeep=1; optinfo=1; optwidth=1;  optnums=1;  optbody=1; optabdiff=1;
optstrip=1; opthwdiff=1; optlinks=1; optfold=1;
optoldcolour="red"; optnewcolour="green"; optlarger=""
optstdout=1;

